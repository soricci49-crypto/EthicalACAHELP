function generateAnswer() {
  const prompt = document.getElementById("userPrompt").value;
  const responseDiv = document.getElementById("response");

  if (!prompt) {
    responseDiv.innerText = "‚ö†Ô∏è Please enter a question.";
    return;
  }

  // Placeholder response (you can later connect to AI like Firebase, Gemini, or OpenAI)
  responseDiv.innerText = "ü§ñ Profferitah says: I have received your prompt ‚Üí " + prompt;
}

function uploadFile() {
  const fileInput = document.getElementById("fileUpload");
  const status = document.getElementById("uploadStatus");

  if (fileInput.files.length === 0) {
    status.innerText = "‚ö†Ô∏è Please select a file first.";
    return;
  }

  const file = fileInput.files[0];
  status.innerText = `‚úÖ File "${file.name}" uploaded successfully (simulation).`;
}
